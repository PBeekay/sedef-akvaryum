# Environment Variables Example
# Copy this file to .env.local for local development

# Admin Authentication (Firebase Auth)
REACT_APP_ADMIN_EMAIL=admin@sedefakvaryum.com
REACT_APP_MODERATOR_EMAIL=moderator@sedefakvaryum.com

# JWT Secret (Generate a strong secret for production)
REACT_APP_JWT_SECRET=your_jwt_secret_key_here

# Google Analytics
REACT_APP_GA_MEASUREMENT_ID=G-73Q74LPY26

# Build Configuration
GENERATE_SOURCEMAP=false
NODE_ENV=production

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

# Security
REACT_APP_ENABLE_SECURITY_HEADERS=true
REACT_APP_RATE_LIMIT_ENABLED=true
